{
  "manifest_version": 2,
  "name": "赚客吧论坛助手",
  "version": "1.1",
  "description": "赚客吧论坛助手",
  "author": "krapnik",
  "update_url": "http://upext.chrome.360.cn/intf.php?method=ExtUpdate.query",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://hm.baidu.com; object-src 'self'",
  "homepage_url": "https://github.com/krapnikkk",
  "permissions": [
    "tabs",
    "webRequest",
    "cookies",
    "http://*/*",
    "https://*/*",
    "notifications",
    "storage",
    "contextMenus"
  ],
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "layx.min.js",
        "js/jquery.min.js",
        "js/content-script.js"
      ],
      "css":["layx.min.css"],
      "run_at": "document_end"
    }
  ]
}